<p id="notice"><%= notice %></p>

<h1>Pay Items</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Code</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pay_items.each do |pay_item| %>
      <tr>
        <td><%= pay_item.id %></td>
        <td><%= pay_item.code %></td>
        <td><%= pay_item.name %></td>
        <td><%= link_to 'Show', pay_item %></td>
        <td><%= link_to 'Edit', edit_pay_item_path(pay_item) %></td>
        <td><%= link_to 'Destroy', pay_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pay Item', new_pay_item_path %>
